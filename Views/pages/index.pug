doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Home
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css')
  link(rel='stylesheet' href='index.css')



include ../partials/nav.pug
include ../partials/modal.pug

// WELCOME TO THE SITE SECTION
section.hero.is-medium.is-dark.is-bold
  .hero-body.has-text-centered
    .container
      h1.title
        | Look4Movies
      h2.subtitle
        | With over 75&apos;000 movies in our database, anything your heart desires
        | can be found here.
// THIS IS THE SECTION FOR TILES
section#choices.section
  .tile.is-ancestor
    .tile.is-vertical.is-12
      .tile
        #movieChoice.tile.is-parent.is-vertical
          a.card-link(href='/movies')
            article.tile.is-child.notification.is-warning.is-bold
              p.title Movies
              p.subtitle What itch will you scratch?
              figure.image.is-4by3
                img(src='https://bulma.io/images/placeholders/640x480.png')
        .tile.is-parent.is-vertical
          a.card-link(href='/actors')
            article.tile.is-child.notification.is-light.is-bold
              p.title Actors
              p.subtitle Who will you stalk?
              figure.image.is-4by3
                img(src='https://bulma.io/images/placeholders/640x480.png')
      .tile
        #movieChoice.tile.is-parent.is-vertical
          a.card-link(href='/selfProfile')
            article.tile.is-child.notification.is-light.is-bold
              p.title Profile
              p.subtitle Check out your profile
              figure.image.is-4by3
                img(src='https://bulma.io/images/placeholders/640x480.png')
        .tile.is-parent.is-vertical
          a.card-link(href='/searchMovie')
            article.tile.is-child.notification.is-warning.is-bold
              p.title Search
              p.subtitle Check out ageless classics
              figure.image.is-4by3
                img(src='https://bulma.io/images/placeholders/640x480.png')

    script(src="/js/navigation.js")