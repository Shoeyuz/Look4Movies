doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Movie Selection
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css')
  body
    include ../partials/nav.pug
    include ../partials/modal.pug
    // SECTION FOR HERO BELOW NAVBAR
    section.hero.is-medium.is-primary.is-bold
      .hero-body.has-text-centered
        .container
          h1.title
            | The database of any movie
          h2.subtitle
            | Deciding what movie to watch? Let us help you
          form#searchMovie
            input.input.is-rounded.is-medium(type='text' placeholder='Type in a movie!')
            input#movieSearch.button(type='submit' value='Search')
    // Content section for title within the body
    section
      .content.is-large.has-text-centered.pt-6.pb-6
        h1 What's popular now?



    .columns.is-3.is-centered
      each val in [0, 1, 2]
        .column.is-one-third
          .card
            a(href='/movies/' + moviesToShow[val].Title)
              .card-image
                figure.image.is-4by3
                  img(src= moviesToShow[val].Poster)
            header.card-header
              p.card-header-title
                | #{moviesToShow[val].Title}
              a.card-header-icon(href='#' aria-label='more options')
                span.icon
                  i.fas.fa-angle-down(aria-hidden='true')
            .card-content
              .content
                | #{moviesToShow[val].Plot} 
                br
                br
                br
                |               Rating: #{moviesToShow[val].imdbRating}
                br
                |               Run Time: #{moviesToShow[val].Runtime}
                br
                |               Release Year: #{moviesToShow[val].Released}
                br
        
      script(src="/js/navigation.js")