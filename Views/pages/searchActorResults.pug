doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Actors fitting querry
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css')
  body
    include ../partials/nav.pug
    include ../partials/modal.pug

    table.table.is-striped.is-hoverable.is-fullwidth
      thead
        tr
          th
            abbr(title='Title') Number
          th
            abbr(title='Title') Name
          th
            abbr(title='Length') Movies
         
      - var iterator= 0
      tbody
      for actor in people
        tr
          th=iterator++

          td
            a(href='/actors/' + actor.name) #{actor.name}
          
          td
            for movie in actor.movies
              a(href='/movies/' + movie) #{movie}

          
          
        tr
        
    script(src="/js/navigation.js")
    script(src="/js/selfProfile.js")

