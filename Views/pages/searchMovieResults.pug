doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title List of fit movies
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css')
  body
    include ../partials/nav.pug
    include ../partials/modal.pug

    table.table.is-striped.is-hoverable.is-fullwidth
      thead
        tr
         
          th
            abbr(title='Title') Title
          th
            abbr(title='Length') Run Time
          th
            abbr(title='Genre') Genre
          th
            abbr(title='Played') Rating
          th
            abbr(title='Length') Plot
      tbody
      for movie in movies
        tr
          
          td
            a(href='/movies/'+movie.Title) #{movie.Title}
          td  #{movie.Runtime} minutes
          td  #{movie.Genre}
          td  #{movie.imdbRating} / 10
          td  Return some jewelery
        tr
        
    script(src="/js/navigation.js")
    script(src="/js/selfProfile.js")

