doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Your Profile
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css')
    link(rel='stylesheet' href='index.css')
  body
    include ../partials/nav.pug
    include ../partials/modal.pug
    // WELCOME TO THE SITE SECTION
    section.hero.is-medium.is-dark.is-bold
      .hero-body.has-text-centered
        .container
          h1.title
            | Welcome #{user.name}!
    // Main container
    nav.level
      // Left side
      .level-item.hast
        .level-item.has-text-centered
          figure.image.is-128x128
            a(href='#')
              img.is-rounded(src='https://bulma.io/images/placeholders/128x128.png')
      // Right side
      .level-item.has-text-centered
        button#manageSettings.button Manage Settings
        button#upgradeProfile.button Upgrade your profile
    .content.has-text-centered
      h2 Actors Following
      p
        ul
        for actor in user.subscribedActors
            li
                a(href="/actors/" + actor) #{actor}
     
        
      h2  Users you follow:
      p
        ul
        for userFol in user.subscribedUsers
            li
                a(href="/users/" + userFol) #{userFol}

      h2  Recommended movies:
      p
        ul
        for mov in user.recommendedMovie
            li
                a(href="/movies/" + mov) #{mov}

              
    script(src="/js/navigation.js")
    script(src="/js/selfProfile.js")

