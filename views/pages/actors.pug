doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Find an Actor
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css')
  body

    include ../partials/nav.pug
    include ../partials/modal.pug

    // END NAVIGATION
    section.hero.is-medium.is-light.is-bold.pb-4
      .hero-body.has-text-centered
        .container
          h1.title
            | Care to stalk a celebrity?
          h2.subtitle
            | We can give you all their info

          br
          if(contributing)
            #addNewActor.button.is-primary.is-warning Add new person

    .tile.is-ancestor
      .tile.is-parent
        article.tile.is-child.box
          p.title Ian McKellen
          figure.image.is-4by3
            a(href='actorSingle.html')
              img.is-rounded(src='https://bulma.io/images/placeholders/640x480.png')
      .tile.is-parent
        article.tile.is-child.box
          p.title Vigo Mortessen
          figure.image.is-4by3
            a(href='actorSingle.html')
              img.is-rounded(src='https://bulma.io/images/placeholders/640x480.png')
      .tile.is-parent
        article.tile.is-child.box
          p.title Elijah Woods
          figure.image.is-4by3
            a(href='actorSingle.html')
              img.is-rounded(src='https://bulma.io/images/placeholders/640x480.png')

    script(src="/js/navigation.js")
    script(src="/js/actors.js")