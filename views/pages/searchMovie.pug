doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title searchMovies
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css')
  body



    include ../partials/nav.pug
    include ../partials/modal.pug
    section.hero.is-medium.is-info.is-bold
      .hero-body.has-text-centered
        .container
          h1.title
            | Stoneage to now, any movie, any time
          h2.subtitle
            | Your movie, your choice
    section
      .content.is-large.has-text-centered.pt-6.pb-6
        h1 Find a movie
      form#movieFinder
        input#yearMin.input.is-medium.is-dark(type='text' placeholder='Earliest year of release')
        input#yearMax.input.is-medium.is-dark(type='text' placeholder='Latest Year of Release')
        .select
          select#genre
            option Action
            option Comedy
            option Romance
            option Thriller
            option Drama
            option Horror
            option Family
            opption Any
        input#nameMovie.input.is-medium.is-dark(type='text' placeholder='Name of movie')
        input#lengthMovie.input.is-medium.is-dark(type='text' placeholder='Max Length of Movie')
        input#movieFinderSubmit.button(type='reset' value='Search')
    section
      .content.is-large.has-text-centered.pt-6.pb-6
        h1 Find an actor/director
      form#actorFinder
        input#actorName.input.is-medium.is-dark(type='text' placeholder=' Actor Name')
        input#actorFinderSubmit.button(type='reset' value='Search')

    section
      .content.is-large.has-text-centered.pt-6.pb-6
        h1 Find a user
      form#userFinder
        input#userName.input.is-medium.is-dark(type='text' placeholder='Part of name')
        input#userFinderSubmit.button(type='reset' value='Search')

    script(src="/js/navigation.js")
    script(src="/js/searchMovie.js")


    